<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WCountUI.Desktop.EditorView">
	<Grid ColumnDefinitions="* auto *" RowDefinitions="auto auto auto">


		<StackPanel Margin="10" Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
			<TextBlock></TextBlock>
			
			
		</StackPanel>

		<StackPanel Margin="10" Grid.Row="1" Grid.Column="1" Orientation="Horizontal">

		</StackPanel>

		
		
		<TextBox Grid.Column="1" Grid.Row="2" x:Name="textEditor" AcceptsReturn="True" MinLines="10"
				 MinHeight="400" MinWidth="600" Text="{Binding Words}" TextChanged="TextEditor_TextChanged"/>
	</Grid>	
</UserControl>
