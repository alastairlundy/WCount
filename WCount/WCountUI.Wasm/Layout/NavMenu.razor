@using Microsoft.FluentUI.AspNetCore.Components.Icons.Regular
<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon"/>
    <label for="navmenu-toggle" class="navmenu-icon">
        <FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill"/>
    </label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <!--   <FluentAppBar Id="main-menu" @bind-Orientation="NavBarOrientation">
                <FluentAppBarItem Href="/"></FluentAppBarItem>
               <FluentAppBarItem Href="upload"></FluentAppBarItem>
               <FluentAppBarItem Href="history"></FluentAppBarItem>
               <FluentAppBarItem Href="settings"></FluentAppBarItem>
           </FluentAppBar>!-->
           
           <FluentNavMenu Id="main-menu" Width="250" Collapsible="true" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
               <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavLink>
               <FluentNavLink Href="editor" Icon="@(new Icons.Regular.Size20.Textbox())" IconColor="Color.Accent">Editor</FluentNavLink>
            <FluentNavLink Href="upload" Icon="@(new Icons.Regular.Size20.DocumentAdd())" IconColor="Color.Accent">File Upload</FluentNavLink>

               <FluentNavLink Href="weather" Icon="@(new Icons.Regular.Size20.WeatherPartlyCloudyDay())" IconColor="Color.Accent">Weather</FluentNavLink>
           </FluentNavMenu> 
    </nav>
</div>

@code {
    private bool expanded = true;

    private Orientation NavBarOrientation = Orientation.Vertical;
    
    bool isMobile;

    void OnGet()
    {
        isMobile = false;
        
        if (isMobile == true)
        {
            NavBarOrientation = Orientation.Horizontal;
        }
    }
}